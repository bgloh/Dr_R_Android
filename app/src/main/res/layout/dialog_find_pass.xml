<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="50dp"
    android:padding="5dp" >

    <TextView
        android:id="@+id/guide_msg"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="아이디를 입력하면 이메일로 인증코드가 발송됩니다." />

    <LinearLayout
        android:id="@+id/dialog_find_pass0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="아이디 : "/>
        <EditText
            android:id="@+id/dialog_find_pass_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text"
            android:paddingRight="3dp"/>
        <Button
            android:id="@+id/send_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#6CD9DC"
            android:textColor="#FFF"
            android:text="코드 보내기" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_find_pass1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50px"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="CODE : "/>
        <EditText
            android:id="@+id/dialog_find_pass_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:paddingRight="3dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dialog_find_pass2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="새로운 패스워드 : "/>
        <EditText
            android:id="@+id/dialog_new_pass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:paddingRight="3dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_find_pass3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="새로운 패스워드 확인 : "/>
        <EditText
            android:id="@+id/dialog_new_pass_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:paddingRight="3dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_find_pass4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/dialog_set_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6CD9DC"
            android:textColor="#FFF"
            android:text="패스워드 설정" />
    </LinearLayout>
</LinearLayout>